{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "FPSS Job (.fpj)",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "energy": {
      "type": "string"
    },
    "material": {
      "type": "string"
    },
    "qa": {
      "type": "string"
    },
    "steps": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "target": {
            "type": "string"
          },
          "command": {
            "type": "string"
          },
          "params": {
            "type": "object"
          }
        },
        "required": [
          "target",
          "command"
        ]
      }
    }
  },
  "required": [
    "name"
  ]
}