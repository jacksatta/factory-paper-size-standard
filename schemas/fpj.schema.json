{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "FPSS Job (.fpj)",
  "type": "object",
  "required": [
    "version",
    "job_id",
    "steps"
  ],
  "properties": {
    "version": {
      "type": "string"
    },
    "job_id": {
      "type": "string"
    },
    "profile": {
      "type": "string",
      "enum": [
        "NANO",
        "MICRO",
        "HUMAN",
        "MACRO"
      ]
    },
    "energy": {
      "type": "string"
    },
    "material": {
      "type": "string"
    },
    "qa": {
      "type": "string"
    },
    "stations": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "steps": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "op"
        ],
        "properties": {
          "id": {
            "type": [
              "integer",
              "string"
            ]
          },
          "op": {
            "type": "string",
            "enum": [
              "home",
              "heat",
              "cool",
              "print",
              "scan",
              "move",
              "wait",
              "tool",
              "custom"
            ]
          },
          "axes": {
            "type": "string"
          },
          "tool": {
            "type": "string"
          },
          "temp_c": {
            "type": "number"
          },
          "duration_s": {
            "type": "number"
          },
          "coupon": {
            "type": "string"
          },
          "mode": {
            "type": "string"
          },
          "max_dev_mm": {
            "type": "number"
          },
          "x": {
            "type": "number"
          },
          "y": {
            "type": "number"
          },
          "z": {
            "type": "number"
          },
          "station": {
            "type": "string"
          }
        }
      }
    }
  }
}
